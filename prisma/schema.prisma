// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model City {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String
  state     String?
  fullName  String?
  tagline   String   @default("Find help. Fast.")
  description String @default("A simple, humane platform for finding essential resources")
  
  centerLat Float
  centerLng Float
  defaultZoom Int @default(12)
  
  resources Resource[]
  resourceUpdateRequests ResourceUpdateRequest[]
  adminRoleAssignments AdminRoleAssignment[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ResourceCategory {
  food
  shelter
  housing
  legal
}

enum ResourceUpdateStatus {
  pending
  approved
  rejected
}

enum ResourceUpdateType {
  add
  update
}

enum AvailabilityStatus {
  yes
  no
  not_sure
}

enum AdminRole {
  super_admin
  city_admin
  local_admin
}

enum AdminScopeType {
  global
  city
  location
}

model Resource {
  id        String   @id @default(cuid())
  externalId String  // The original ID from JSON/admin form

  category  ResourceCategory @default(food)
  
  cityId    String
  city      City     @relation(fields: [cityId], references: [id], onDelete: Cascade)
  
  name      String
  address   String
  lat       Float?
  lng       Float?
  hours     String?
  daysOpen  String?
  phone     String?
  website   String?
  requiresId Boolean @default(false)
  walkIn    Boolean @default(false)
  notes     String?
  availabilityStatus AvailabilityStatus?
  lastAvailableAt DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([cityId, category, externalId])
  @@index([cityId])
  @@index([cityId, category])
}

model ResourceUpdateRequest {
  id                String               @id @default(cuid())
  citySlug          String
  city              City                 @relation(fields: [citySlug], references: [slug], onDelete: Cascade)
  resourceExternalId String?
  category          ResourceCategory     @default(food)
  changeType        ResourceUpdateType
  payload           Json
  status            ResourceUpdateStatus @default(pending)
  submittedByEmail  String
  submittedByName   String?
  submittedAt       DateTime             @default(now())
  reviewedByEmail   String?
  reviewedAt        DateTime?
  reviewNote        String?

  @@index([status, submittedAt])
  @@index([citySlug])
}

model AdminRoleAssignment {
  id          String         @id @default(cuid())
  userEmail   String
  role        AdminRole
  scopeType   AdminScopeType @default(global)
  citySlug    String?
  city        City?          @relation(fields: [citySlug], references: [slug], onDelete: Cascade)
  locationId  String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([userEmail])
  @@index([userEmail, role])
  @@index([citySlug])
  @@index([citySlug, locationId])
  @@unique([userEmail, role, scopeType, citySlug, locationId])
}

model OAuthUser {
  id                String   @id @default(cuid())
  email             String   @unique
  name              String?
  image             String?
  provider          String
  providerAccountId String?
  firstSignInAt     DateTime @default(now())
  lastSignInAt      DateTime @default(now())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([provider])
}
